<Page x:Class="SadIlvinaPP.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SadIlvinaPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel Orientation="Horizontal"
                    Margin="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel>
                <Button x:Name="childrenBtn"
                        Margin="10"
                        Click="childrenBtn_Click" >Дети</Button>
                <Button x:Name="parentBtn"
                        Margin="10"
                        Click="parentBtn_Click" >Родители</Button>
            </StackPanel>
            <StackPanel>
                <Button x:Name="groupBtn"
                        Margin="10"
                        Click="groupBtn_Click" >Группы</Button>
                <Button x:Name="visitBtn"
                        Margin="10"
                        Click="visitBtn_Click" >Посещение</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
